server {
    listen   80;
    server_name ndc13.django.smartstudy.co.kr ndc13beta.smartstudy.co.kr ndc13.smartstudy.co.kr;
    keepalive_timeout 10;
    keepalive_requests 50;

    gzip             on;
    gzip_min_length  1000;
    gzip_proxied     expired no-cache no-store private auth;
    gzip_disable     "MSIE [1-6]\.";
    gzip_types       text/plain text/css application/json application/javascript application/x-javascript text/javascript text/xml application/xml;

    client_max_body_size 100M;

    access_log /var/log/ndc13/nginx.access.log;
    error_log /var/log/ndc13/nginx.error.log;
    
    root /usr/share/nginx/www;
    index index.html index.htm;

    location / {
        uwsgi_pass unix:///var/run/ndc13-uwsgi.sock;
        include uwsgi_params;
    }

    location /static {
        alias /home/svc/ndc13/static;
        autoindex off;
    }

    location /media {
        alias /home/svc/ndc13/media;
        autoindex off;
    }
}
